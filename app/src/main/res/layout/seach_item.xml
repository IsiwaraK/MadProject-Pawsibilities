<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#624F6F"
    android:elevation="6dp"
    android:outlineAmbientShadowColor="#624F6F"
    android:outlineSpotShadowColor="#624F6F"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="25dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/searchimg1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#624F6F"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/searchnametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/searchimg1"
            android:text="Name"
            android:textColor="#624F6F"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/searchmobiletext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchnametext"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/searchimg1"
            android:text="Mobile"
            android:textColor="#624F6F"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/searchemailtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchmobiletext"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/searchimg1"
            android:text="Email"
            android:textColor="#624F6F"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/searchprovincetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchemailtext"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/searchimg1"
            android:text="Province"
            android:textColor="#624F6F"
            android:textSize="25sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>