<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#624F6F"
    android:elevation="6dp"
    android:outlineAmbientShadowColor="#624F6F"
    android:outlineSpotShadowColor="#624F6F"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="25dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#624F6F"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/nametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:text="Name"
            android:textColor="#624F6F"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mobiletext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nametext"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:text="Mobile"
            android:textColor="#624F6F"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/emailtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mobiletext"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:text="Email"
            android:textColor="#624F6F"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/provincetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailtext"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:text="Province"
            android:textColor="#624F6F"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/provincetext"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnEdit"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                android:text="Edit"
                app:backgroundTint="#892CC8"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Delete"
                app:backgroundTint="#892CC8"
                android:textAllCaps="false" />


        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>